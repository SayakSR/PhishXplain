{
  "manifest_version": 3,
  "name": "PhishXplain",
  "version": "1.0",
  "description": "Automatically explains detected phishing websites",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
 
      "128": "images/icon128.png"
    }
  },
  "icons": {

    "128": "images/icon128.png"
  }
} 